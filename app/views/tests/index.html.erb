<h1><%= t('.header') %></h1>

<table class="table table-hover">
  <thead class="thead-dark">
  <tr>
    <th scope="col"><%= t('.test_number') %></th>
    <th scope="col" class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'text-success hidden', height: 20 %>
      <%= octicon 'arrow-down', class: 'text-success hidden', height: 20 %>
    </th>
    <th scope="col"><%= t('.level') %></th>
    <th scope="col"><%= t('.category') %></th>
    <th scope="col"><%= t('.count_questions') %></th>
    <th scope="col"><%= t('.actions') %></th>
  </tr>
  </thead>
  <tbody>
  <%= render @tests %>
  </tbody>
</table>
